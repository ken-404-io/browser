{
  "name": "orbital",
  "version": "1.0.0",
  "description": "Orbital - A fast, modular Chromium-based browser built with TypeScript and Electron",
  "main": "dist/main/main.js",
  "scripts": {
    "copy-assets": "node -e \"const fs=require('fs'),p=require('path');const d=p.join('dist','renderer');fs.mkdirSync(d,{recursive:true});fs.copyFileSync(p.join('src','renderer','index.html'),p.join(d,'index.html'));fs.copyFileSync(p.join('src','renderer','styles.css'),p.join(d,'styles.css'));\"",
    "build": "tsc -b tsconfig.main.json tsconfig.preload.json tsconfig.renderer.json && npm run copy-assets",
    "start": "npm run build && electron .",
    "dev": "npm run build && electron .",
    "clean": "node -e \"const fs=require('fs');fs.rmSync('dist',{recursive:true,force:true});['tsconfig.main.tsbuildinfo','tsconfig.preload.tsbuildinfo','tsconfig.renderer.tsbuildinfo'].forEach(f=>{try{fs.unlinkSync(f)}catch(e){}});\"",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "build": {
    "appId": "com.orbital.browser",
    "productName": "Orbital",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": ["AppImage", "deb"]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ken-404-io/browser.git"
  },
  "keywords": [
    "orbital",
    "browser",
    "electron",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ken-404-io/browser/issues"
  },
  "homepage": "https://github.com/ken-404-io/browser#readme",
  "devDependencies": {
    "@types/node": "^22.0.0",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "typescript": "^5.9.3"
  }
}
